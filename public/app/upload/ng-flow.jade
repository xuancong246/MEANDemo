.container
  .well
    form.form-horizontal(name="uploadForm")
      fieldset
        legend Upload files using ng-flow
        div(flow-init="{target:'/uploader'}", flow-files-submitted="$flow.upload()")
          h4 Upload file:
          input(type="file", flow-btn="")
          h4 Upload folder:
          input(type="file", flow-btn="", flow-directory="")
          h4 Upload file via span (not button):
          span.btn(flow-btn="") Upload File
          div(flow-file-progress="")
          img(flow-img="$flow.files[0]")
          
          table.table.table-hover.table-striped.table-condensed
            thead
              tr
                th #
                th Name
                th Message
                th Status
            tbody
              tr(ng-repeat="file in $flow.files")
                td {{ $index + 1 }}
                td {{ file.name }} {{ file.relativePath }} {{ file.size }}
                td {{ file.msg }}
                td {{ file.isUploading() }} {{ file.isComplete() }}
