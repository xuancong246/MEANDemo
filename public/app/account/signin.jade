.container
  .well.col-md-6.col-md-offset-3
    form.form-horizontal(name="signinForm")
      fieldset
        legend Log In System
        .form-group
          label.col-md-2.control-label(for="username") Username
          .col-md-10
            input.form-control(name="username", type="email", placeholder="Email", ng-model="vm.model.username", required)
        .form-group
          label.col-md-2.control-label(for="password") Password
          .col-md-10
            input.form-control(name="password", type="password", placeholder="Password", ng-model="vm.model.password", required)
        .form-group
          .col-md-10.col-md-offset-2
            .pull-right
              button.btn.btn-primary(ng-click="vm.signIn()", ng-disabled="signinForm.$invalid") Sign In
              | &nbsp;
              a.btn.btn-default(href="/") Cancel
